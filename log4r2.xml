<?xml version="1.0" encoding="UTF-8"?>
<log4r_config>
	<pre_config>
		<global level="DEBUG" />
	</pre_config>
	<!-- Top level logger -->
	<logger name="Log4r2" type="Log4r::Logger" level="DEBUG" trace="true">
		<outputters>E1, F1</outputters>
	</logger>
	<outputter name="E1" type="Log4r::StdoutOutputter">
		<formatter name="P1" type="Log4r::PatternFormatter" pattern="%d [%l] %c(%t) - %m"
			date_pattern="%H:%M:%S" />
	</outputter>
	<outputter name="F1" type="Log4r::FileOutputter" filename="log//log4r_test.log"
		trunc="false">
		<formatter name="P2" type="Log4r::PatternFormatter" pattern="%d [%l] %C(%t) - %M"
			date_pattern="%Y/%m/%d %H:%M:%S" />
	</outputter>
</log4r_config>
